<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarbonFootprintActivity">

    <TextView
        android:id="@+id/footprintTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your Carbon Footprint Overview"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/totalFootprintText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total Emissions: 0 kg CO2e"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/footprintTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/breakdownText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Breakdown:\nTransportation: 0 kg CO2e\nFood: 0 kg CO2e\nHousing: 0 kg CO2e\nConsumption: 0 kg CO2e"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/totalFootprintText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp" />

    <TextView
        android:id="@+id/comparisonText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your footprint is 0% below the national average for Canada.\nYour footprint meets global targets for climate change!"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/breakdownText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp" />

    <Button
        android:id="@+id/backToMainPageButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Back to Main Page"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
