<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".airtravelq1">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

                <!-- Logo -->
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="256dp"
                    android:layout_height="205dp"
                    android:src="@drawable/logo"
                    android:layout_gravity="center" />

                <!-- Question Text -->
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="How many short-haul flights have you taken in the past year?"
                    android:layout_marginHorizontal="50dp"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_gravity="center" />

                <!-- Button Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp">

                        <!-- Row 1 -->
                        <Button
                            android:id="@+id/atq1no"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_columnWeight="1"
                            android:text="None"
                            android:backgroundTint="#009999"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/ptq12"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_columnWeight="1"
                            android:text="1-2"
                            android:backgroundTint="#009999"
                            android:textSize="16sp" />

                        <!-- Row 2 -->
                        <Button
                            android:id="@+id/ptq15"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_columnWeight="1"
                            android:text="3-5"
                            android:backgroundTint="#009999"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/ptq110"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_columnWeight="1"
                            android:text="6-10"
                            android:backgroundTint="#009999"
                            android:textSize="16sp" />

                        <!-- Row 3 -->
                        <Button
                            android:id="@+id/ptq1more"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_columnSpan="2"
                            android:text="More than 10"
                            android:backgroundTint="#009999"
                            android:textSize="16sp" />
                </GridLayout>
        </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>